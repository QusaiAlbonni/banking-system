{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "config/**/*", "watchAssets": true },
      { "include": "email/templates/**/*", "watchAssets": true }
    ]
  }
}
